FROM stalker-base:latest

WORKDIR /app

RUN apk update
RUN apk add bash
RUN apk add g++ make py3-pip

RUN mkdir -p /certs/

# Mongo certs
COPY flow_manager/ca.pem /certs/
COPY flow_manager/client-signed.crt /certs/
COPY flow_manager/client.key /certs/

# Kafka certs
COPY flow_manager/kafka-ca.crt /certs/
COPY flow_manager/kafka-client-signed.crt /certs/
COPY flow_manager/kafka-client.key /certs/

CMD ["yarn", "workspace", "@red-kite/jobs-manager", "start:debug"]
