{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "./src/main.js",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.mjml",
        "outDir": "dist/src"
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "skipAutoHttpCode": true
        }
      }
    ]
  }
}
