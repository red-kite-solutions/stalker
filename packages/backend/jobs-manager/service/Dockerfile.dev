FROM stalker-base:latest

WORKDIR /app



RUN mkdir -p /certs/

# Mongo certs
COPY packages/backend/jobs-manager/ca.pem /certs/
COPY packages/backend/jobs-manager/client-signed.crt /certs/
COPY packages/backend/jobs-manager/client.key /certs/

# Kafka certs
COPY packages/backend/jobs-manager/kafka-ca.crt /certs/
COPY packages/backend/jobs-manager/kafka-client-signed.crt /certs/
COPY packages/backend/jobs-manager/kafka-client.key /certs/

CMD ["yarn", "workspace", "@red-kite/jobs-manager", "start:debug"]
