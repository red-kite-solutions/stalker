    "eslint": "^8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "supertest": "~7.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.4"
