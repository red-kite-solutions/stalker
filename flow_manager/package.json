{
  "name": "flow_manager",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:debug:remote": "nest start --debug --watch -d 0.0.0.0:3001",
    "start:prod": "node dist/main",
    "format:write": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:write": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint-staged:run": "npm run lint:write && npm run format:write",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:cicd": "jest --json --outputFile=./test/jest-output.json",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --colors --config  ./test/jest-e2e.json",
    "test:e2e:cicd": "jest --json --outputFile=./test/jest-output-e2e.json --testLocationInResults --config ./test/jest-e2e.json",
    "test:e2e:watch": "jest --watchAll --colors --runInBand --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/cqrs": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.4.7",
    "@nestjs/mongoose": "^8.0.1",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/schedule": "^1.0.2",
    "@typegoose/typegoose": "^8.3.0",
    "@types/mustache": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dot-object": "^2.1.4",
    "kafkajs": "^2.1.0",
    "jwt-decode": "^3.1.2",
    "keybase-bot": "^3.6.1",
    "mongoose": "^5.12.4",
    "mustache": "^4.2.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.2",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "argon2": "^0.28.5",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.6",
    "prettier": "^2.6.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": "npm run lint-staged:run"
  }
}
